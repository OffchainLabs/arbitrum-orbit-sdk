{
  "include": ["./src/**/*"],
  "exclude": ["./src/dist/**/*"],
  "compilerOptions": {
    "strict": true,
    "incremental": true,

    "lib": ["ES2021"],
    "target": "ES2021",

    "moduleResolution": "node",

    // JavaScript support
    "allowJs": false,
    "checkJs": false,

    // Skip type checking for node modules
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Show all keys in type without hiding in "... more ..."
    // Setting this option to true will cause massive performance slowdown.
    // Keeping it to false (default value) for future reference
    "noErrorTruncation": false
  }
}
